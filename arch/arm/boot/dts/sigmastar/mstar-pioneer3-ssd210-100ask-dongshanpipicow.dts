/dts-v1/;
#include "mstar-pioneer3-ssd210.dtsi"

/ {
	model = "DongShan Pi PicoW";
	compatible = "100ask,dongshanpipicow", "sstar,pioneer3";

	aliases {
		serial0 = &pm_uart;
	};

	chosen {
		stdout-path = "serial0:115200n8";
		bootargs = "console=ttyS0,115200 clk_ignore_unused earlyprintk";
	};

	reg_vcc: regulator_vcc {
		compatible = "regulator-fixed";
		regulator-name = "vcc";
		regulator-min-microvolt = <5000000>;
		regulator-max-microvolt = <5000000>;
		regulator-boot-on;
	};

	reg_vcc_core: regulator_core {
		compatible = "regulator-gpio";
		regulator-name = "vcc_core";
		regulator-type = "voltage";
		regulator-min-microvolt = <900000>;
		regulator-max-microvolt = <1000000>;
		regulator-boot-on;
		regulator-ramp-delay = <12000>;
		gpios = <&sar 1 0>;
		states = <1000000 0x1
				  900000  0x0>;
	};

	reg_ddr: regulator_ddr {
		compatible = "regulator-fixed";
		regulator-name = "vcc_ddr";
		regulator-min-microvolt = <1800000>;
		regulator-max-microvolt = <1800000>;
		regulator-boot-on;
	};

	reg_3v3: regulator_3v3 {
		compatible = "regulator-fixed";
		regulator-name = "vcc_3v3";
		regulator-min-microvolt = <3300000>;
		regulator-max-microvolt = <3300000>;
		regulator-boot-on;
	};

	extcon_usb: extcon_iddig {
		compatible = "linux,extcon-usb-gpio";
		id-gpio = <&sar 2 GPIO_ACTIVE_HIGH>;
	};
};

&cpu0 {
	cpu-supply = <&reg_vcc_core>;
};

&pm_uart {
	status = "okay";
};

&isp {
	status = "okay";
	nand: nand@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <54000000>;
		spi-rx-bus-width = <4>;
		partitions {
			compatible = "fixed-partitions";
			#address-cells = <1>;
			#size-cells = <1>;
			ubi@400000 {
				label = "ubi";
				reg = <0x400000 0x7c00000>;
			};
		};
	};
};

&bach {
	status = "okay";
};

&miu {
	ddr-supply = <&reg_ddr>;
};

&usbphy0 {
	status = "okay";
};

&uhc0 {
	status = "okay";
};

&sar {
	status = "okay";
	muxctrl {
		gpio-hog;
		/* low to enable WiFi */
		gpios = <2 GPIO_ACTIVE_LOW>;
		/* enable WiFi */
		//output-high;
		output-low;
	};
};

&emac {
	#address-cells = <1>;
	#size-cells = <0>;
	pinctrl-names = "default";
	pinctrl-0 = <&eth_mode8_pins>;
	phy-mode = "rmii";
	phy-handle = <&phy1>;
	status = "okay";
	phy1: ethernet-phy@1 {
		compatible = "ethernet-phy-id0007.c0f0",
					 "ethernet-phy-ieee802.3-c22";
		reg = <1>;
		smsc,disable-energy-detect;
	};
};

&pwm {
	//pinctrl-names = "default";
	//pinctrl-0 = <&ssd210_pwm0_mode1_pins>;
};

&sdio {
	pinctrl-names = "default";
	pinctrl-0 = <&ssd210_sdio_mode2_pins>;
	vmmc-supply = <&reg_3v3>;
	vqmmc-supply = <&reg_3v3>;
	//status = "okay";
};

&otg0 {
	//extcon = <&extcon_usb>;
	status = "okay";
};

&mspi0 {
	//pinctrl-names = "default";
	//pinctrl-0 = <&ssd210_spi0_mode3_pins>;
	status = "okay";
	spidev@0 {
		compatible = "rohm,dh2228fv";
		spi-max-frequency = <1000000>;
		reg = <0>;
	};
};
