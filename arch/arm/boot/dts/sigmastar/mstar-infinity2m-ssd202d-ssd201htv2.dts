/dts-v1/;
#include "mstar-infinity2m-ssd202d.dtsi"

/ {
	model = "SSD201_HT_V2";
	compatible = "honestar,ssd201htv2", "mstar,infinity2m";

	aliases {
		serial0 = &pm_uart;
	};

	chosen {
		stdout-path = "serial0:115200n8";
		bootargs = "console=ttyS0,115200 clk_ignore_unused";
	};
};

&pm_uart {
	status = "okay";
};

&i2c0 {
	status = "okay";
};

&i2c1 {
	status = "okay";
	ts@5d {
		compatible = "goodix,gt911";
		reg = <0x5d>;
	};
};

&isp {
	status = "okay";
	nand: nand@0 {
		#address-cells = <1>;
		#size-cells = <1>;
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <40000000>;
	};
};

&emac {
	status = "okay";
};

&emac1 {
	status = "okay";
	phy-mode = "rmii";
	phy-handle = <&phy0>;


	#address-cells = <1>;
	#size-cells = <0>;
	phy0: ethernet-phy@0 {
		reg = <0x0>;
		phy-mode = "rmii";
	};
};

